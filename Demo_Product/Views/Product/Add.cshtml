@model EntityLayer.Concrete.Product
@{
	ViewData["Title"] = "Add";
	Layout = "~/Views/Shared/_UILayout.cshtml";
}

<form method="post">
	@Html.Label("Ürün adı")
	@Html.TextAreaFor(x => x.Name, new { @class = "form-control" })
	@Html.ValidationMessageFor(x=>x.Name)
	<br />
	@Html.Label("Fiyat")
	@Html.TextAreaFor(x => x.Price, new { @class = "form-control" })
	@Html.ValidationMessageFor(x => x.Price)
	<br />
	@Html.Label("Stok")
	@Html.TextAreaFor(x => x.Stock, new { @class = "form-control" })
	@Html.ValidationMessageFor(x => x.Stock)
	<br />
	<button class="btn btn-primary"> Ürün Ekle </button>
</form>

