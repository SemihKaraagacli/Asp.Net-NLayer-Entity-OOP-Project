@using EntityLayer.Concrete
@model List<Customer>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ürün Adı</th>
        <th>Şehir</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.City</td>
            <td><a href="/Customer/Delete/@item.Id" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Customer/Update/@item.Id" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }
</table>

<a href="/Customer/Add" class="btn btn-primary"> Ürün Ekle </a>