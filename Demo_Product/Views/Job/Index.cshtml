@using EntityLayer.Concrete
@model List<Job>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>İş Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.JobId</td>
            <td>@item.Name</td>
            <td><a href="/Job/Delete/@item.JobId" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Job/Update/@item.JobId" class="btn btn-outline-success">Güncelle</a></td>
            <td><a href="/Job/Detail/@item.JobId" class="btn btn-outline-primary">Detay</a></td>
        </tr>
    }
</table>